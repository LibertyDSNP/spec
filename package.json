{
    "name": "liberty-protocol-spec",
    "version": "0.0.1",
    "description": "Detailed documentation regarding the current state of the protocol",
    "license": "CC-BY-SA-4.0",
    "files": [
        "src/",
        "pages/",
        "tsconfig.json",
        "package.json"
    ],
    "scripts": {
        "build": "mdbook build -o",
        "serve": "mdbook serve -o",
        "watch": "mdbook watch -o",
        "spellcheck": "mdspell './pages/**/*.md' './*.md' '!./LICENSE.md' --en-us --ignore-numbers --report",
        "spellfix": "mdspell './pages/**/*.md' './*.md' '!./LICENSE.md' --en-us --ignore-numbers",
        "lint-md": "remark --frail ./pages/**/*.md ./pages/*.md",
        "lint": "npm run lint-md && npm run spellcheck"
    },
    "devDependencies": {
        "remark": "^14.0.2",
        "remark-cli": "^10.0.1",
        "remark-lint": "^9.1.1",
        "remark-preset-lint-recommended": "^6.1.2",
        "remark-validate-links": "github:wilwade/remark-validate-links#7a52742ba4d94c088929f4c1ee7fe633d5a03e07",
        "markdown-spellcheck": "^1.3.1"
    },
    "engines": {
        "node": ">=16.14.0 <17"
    },
    "remarkConfig": {
        "plugins": [
            "remark-preset-lint-recommended",
            [
                "remark-validate-links",
                {
                    "basePath": "pages",
                    "repository": "/"
                }
            ],
            [
                "remark-lint-list-item-indent",
                false
            ]
        ]
    }
}
